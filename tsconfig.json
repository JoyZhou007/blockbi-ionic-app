{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015"
  },

  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "config",
    "platforms",
    "plugins",
    "www"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}